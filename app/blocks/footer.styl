/*! Footer */
footer
  background-color bgnav
  position relative
  padding 40px 0 60px

.footer__house-img
  position absolute
  left 0
  bottom 0
  width 100%
  max-width 352px

.footer__ornament
  position absolute
  width 100%
  bottom 0
  left 0
  height 40px
  background-image url('../images/footer__ornament.png')
  background-size cover
  background-repeat repeat-x

.footer__txt
  font-size 18px
  font-weight 300
  color lightgrey
  line-height 20px

.footer__logo
  margin-bottom 20px

.footer__contacts-ttl
  color lightgrey
  font-size 20px
  margin-bottom 10px

.footer__socials-ttl
  margin-top 10px

.footer__contacts-row-right-row,
.footer__contacts-row-right-txt
  color textGreen
  font-size 18px

.footer__contacts-row
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction row

.footer__contacts-row-left
  width 30px
  margin-right 5px

.footer__contacts-row-left-img
  width 20px

.footer__socials-items
  display -webkit-flex
  display -ms-flex
  display flex

.footer__socials-items-item
  margin-right 3px

.footer__nav-item
  font-size 18px
  font-weight 300
  color lightgrey

.footer__copyright
  font-size 16px
  color lightgrey
  text-align center
  width 100%

.footer__separ
  width 100%
  border-top 1px solid lightgrey
  margin 30px 0 10px
/*! /Footer */
