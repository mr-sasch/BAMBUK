extends ../templates/template-simple

block content  
  // Header 
  +header__simple('gosstandarts__header-bg', 'Госстандарты КНР')
  // /Header 
  .bg__right.bg-grey
    +breabcrumbs()
    // Контент
    // Сео текст
    .container
