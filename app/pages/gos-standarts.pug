              .gos-standarts__item
                +itemLeft()
                .gos-standarts__item-right
                  +itemBuy()
              .gos-standarts__item
                +itemLeft()
                .gos-standarts__item-right
                  +itemBuy()
              .gos-standarts__item
                +itemLeft()
                .gos-standarts__item-right
